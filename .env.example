# Stripe - Obtenha suas chaves em https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=sua_chave_publica_aqui
STRIPE_SECRET_KEY=sua_chave_secreta_aqui

# URL do seu site (sem barra no final)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe Webhook Secret
# Dashboard > Developers > Webhooks > Add endpoint
# URL: https://seu-site.com/api/webhook
# Eventos: checkout.session.completed
STRIPE_WEBHOOK_SECRET=seu_webhook_secret_aqui

# OpenAI API Key - para geração de letras
# Obtenha em https://platform.openai.com/api-keys
OPENAI_API_KEY=sua_chave_openai_aqui

# E-mail Service (opcional)
# Crie uma conta em https://resend.com
RESEND_API_KEY=

# Upstash Redis (para armazenar dados dos pedidos)
# Crie uma conta gratuita em https://upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
